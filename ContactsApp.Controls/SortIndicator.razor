@inherits GridControlsBase
@using ContactsApp.Model 

@if (Column == Controls.SortColumn)
{
    @if (Controls.SortAscending)
    {
        <span>🔼</span>
    }
    else
    {
        <span>🔽</span>
    }
}
else
{
    <span>&nbsp;</span>
}
@code {
    /// <summary>
    /// Sets which <see cref="ContactFilterColumns"/> this indicator is for.
    /// </summary>
    [Parameter]
    public ContactFilterColumns Column { get; set; }

    /// <summary>
    /// Only interested in events that change the state of the sort indicator.
    /// </summary>
    protected override Predicate<string> PropertyFilter =>
        str => str == nameof(Controls.SortColumn) || str == nameof(Controls.SortAscending);
}
